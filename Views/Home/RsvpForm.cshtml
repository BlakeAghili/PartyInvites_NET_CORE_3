@model GuestResponse
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>RSVP FORM</title>
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>

<body>
<div>
    <h5 class="bg-primary text-white text-center m-2 p-2">RSVP</h5>
    <form class="m-2" asp-action="RsvpForm" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name">Your Name:</label>
            <input asp-for="Name" class="form-control"/>
        </div>

        <div class="form-group">
            <label asp-for="Email">Your Email:</label>
            <input asp-for="Email" class="form-control"/>
        </div>

        <div class="form-group">
            <label asp-for="Phone">Your Phone</label>
            <input asp-for="Phone" class="form-control"/>
        </div>

        <div class="form-group">
            <label asp-for="WillAttend">Will You Join Us?</label>
            <select asp-for="WillAttend" class="form-control">
                <option value="">Choose an Answer:</option>
                <option value="true">Yes, I will be there.</option>
                <option value="false">No, I cannot come.</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Submit RSVP</button>
    </form>
</div>
</body>

</html>
